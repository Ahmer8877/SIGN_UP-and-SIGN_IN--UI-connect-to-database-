<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:id="@+id/doneimageview"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:background="#F0D0D0"
        android:contentDescription="TODO"
        app:srcCompat="@drawable/baseline_done_all_24"
        android:layout_margin="30dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/congratetext"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="Congratulation You Add In DB"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="Thanks for add Contracts"
        android:textSize="15dp"
        tools:ignore="TextSizeCheck" />

    <Button
        android:id="@+id/okbutton"
        android:layout_width="91dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="OK"
        android:textSize="30dp"
        android:textStyle="bold"
        android:backgroundTint="#F0D0D0"/>
</LinearLayout>